{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section 
    class="avatar" 
    style="background: url(https://source.unsplash.com/collection/489203/500x200) no-repeat center center / cover"></section>
    <section class="details">

        <h3>Details</h3>

        <div class="item">
            <div>Name</div>
            <div>Jane Doe</div>
        </div>

        <div class="item">
            <div>Age</div>
            <div>29</div>
        </div>

        <div class="item">
            <div>Education level</div>
            <div>Bachelor's</div>
        </div>

        <div class="item">
            <div>Class type</div>
            <div>In-person</div>
        </div>

        <div class="item">
            <div>Subjects</div>
            <div>
                <span>Math</span>
                <span>Physics</span>
                <span>Science</span>
            </div>
        </div>

        <div class="item">
            <div>Since</div>
            <div>01/01/2019</div>
        </div>

    </section>
</div>

{% endblock content %}

