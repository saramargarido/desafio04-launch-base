{% extends "layout.njk" %}

{% block content %}

<form action="/teachers" class="card" method="POST">
    <section 
    class="avatar" 
    style="background: url(https://source.unsplash.com/collection/489203/500x200) no-repeat center center / cover"></section>

    <section class="details">

        <h3>Details</h3>

        <div class="item">
            <div>Teacher's pic</div>
            <div>
                <input type="url" name="avatar_url" placeholder="http://">
            </div>
        </div>

        <div class="item">
            <div>Name</div>
            <div>
                <input type="text" name="name" placeholder="Teacher's name">
            </div>
        </div>

        <div class="item">
            <div>Birthday</div>
            <div>
                <input type="date" name="birth">
            </div>
        </div>

        <div class="item">
            <div>Degree</div>
            <div>
                <select name="degree">
                    <option value="" select disable>Choose an option</option>
                    <option value="hightSchool">Hight School</option>
                    <option value="technical">Technical</option>
                    <option value="bachelor">Bachelor's</option>
                    <option value="master">Master's</option>
                    <option value="doctorate">Doctorate</option>
                </select>
            </div>
        </div>

        <div class="item">
            <div>Class type</div>
            <div>
                <span>
                    <input type="radio" name="classType" value="Online" checked>
                    Online
                </span>
                <span>
                    <input type="radio" name="classType" value="In-person">
                    In-person
                </span>
            </div>
        </div>

        <div class="item">
            <div>Subjects</div>
            <div>
                <input type="text" name="subjects" placeholder="Separate the subjects with a comma">
            </div>
        </div>

        <button type="submit">Send</button>

    </section>
</form>

{% endblock content %}

