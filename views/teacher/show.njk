{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section 
    class="avatar" 
    style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">

        <h3>Details</h3>

        <div class="item">
            <div>Name</div>
            <div>{{ teacher.name }}</div>
        </div>

        <div class="item">
            <div>Age</div>
            <div>{{ teacher.age }}</div>
        </div>

        <div class="item">
            <div>Education level</div>
            <div>{{ teacher.degree }}</div>
        </div>

        <div class="item">
            <div>Class type</div>
            <div>In-person</div>
        </div>

        <div class="item">
            <div>Subjects</div>
            <div>
                {% for subject in teacher.subjects %}
                <span>{{ subject }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Since</div>
            <div>{{ teacher.created_at }}</div>
        </div>

    </section>
</div>

{% endblock content %}

